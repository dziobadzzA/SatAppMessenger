<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LoginEditStyle" parent="@style/LoginEditStyle" tools:ignore="ResourceCycle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="LoginButtonStyle" parent="@style/LoginButtonStyle" tools:ignore="ResourceCycle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="LoginLinearLayoutStyle" parent="@style/LoginLinearLayoutStyle" tools:ignore="ResourceCycle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="TextViewStyle" parent="@style/TextViewStyle" tools:ignore="ResourceCycle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextViewFeedback" parent="@style/TextViewFeedback" tools:ignore="ResourceCycle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewTable">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="HeadRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="TextMessages">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/container_messages</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">16sp</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">6sp</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
    </style>

    <style name="PhoneText">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MessageLeft">
        <item name="android:layout_marginStart">40dp</item>
        <item app="switch" name="layout_constraintEnd_toEndOf">@+id/icon</item>
    </style>

    <style name="MessageRight">
        <item name="android:layout_marginEnd">24dp</item>
        <item app="switch" name="layout_constraintEnd_toEndOf">parent</item>
    </style>

</resources>